<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_users_table" author="AlenaOngarbaeva">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="users"/>
                </not>
                <dbms type="postgresql"/>
            </and>
        </preConditions>
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(50)" defaultValue="'USER'">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="users"/>
        </rollback>
    </changeSet>

    <changeSet id="fill_users_table" author="AlenaOngarbaeva">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="users"/>
                <dbms type="postgresql"/>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM users WHERE id = 1
                </sqlCheck>
            </and>
        </preConditions>
        <insert tableName="users">
            <column name="login" value="Admin"/>
            <column name="password" value="{noop}Admin"/>
            <column name="role" value="ADMIN"/>
        </insert>
        <insert tableName="users">
            <column name="login" value="User123"/>
            <column name="password" value="{noop}User123"/>
            <column name="role" value="USER"/>
        </insert>
        <insert tableName="users">
            <column name="login" value="User"/>
            <column name="password" value="{noop}User"/>
            <column name="role" value="USER"/>
        </insert>
    </changeSet>
</databaseChangeLog>