<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_account_balance_v1" author="AlenaOngarbaeva">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="account_balance"/>
                </not>
                <dbms type="postgresql"/>
            </and>
        </preConditions>
        <createTable tableName="account_balance">
            <column name="user_id" type="VARCHAR(50)">
                <constraints primaryKey="true"/>
            </column>
            <column name="balance" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="date_update" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="fill_account_balance" author="AlenaOngarbaeva">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="account_balance"/>
                <dbms type="postgresql"/>
                <sqlCheck expectedResult="0">
                    SELECT COUNT(*) FROM account_balance WHERE user_id = 'user123'
                </sqlCheck>
            </and>
        </preConditions>
        <insert tableName="account_balance">
            <column name="user_id" value="user123"/>
            <column name="balance" valueNumeric="5000.00"/>
            <column name="date_update" valueDate="NOW()"/>
        </insert>
    </changeSet>

</databaseChangeLog>
